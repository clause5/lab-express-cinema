<div id="movie-details">
    <img src="{{movie.image}}" />

    <div id="details">
        <a href="/movies">Go back</a>
        <h3>{{movie.title}}</h3>
        <h4>Director: {{movie.director}}</h4>
        <h5>Stars</h5>
        <ul>
            {{#each movie.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <p>{{#each movie.showtimes}} {{this}} | {{/each}}</p>
    </div>

</div>